{% extends 'AppBundle::layout.html.twig' %}

{% block body %}

    <div class="row">
        {% if listAcceptedWoof is not empty %}
            <h1>Woof acceptés :</h1>
            {% for acceptedWoof in listAcceptedWoof %}
                    <a class="col s3" href="{{ path('user_find', {'id': acceptedWoof.acceptedUser.id}) }}"> {{ acceptedWoof.acceptedUser.username }} </a>
                    <a href="{{ path('app_write_mail', {'id': acceptedWoof.id}) }}">
                        <span class="row col s9 card-panel">
                            {% if acceptedWoof.mail is not empty %}
                                 {{ acceptedWoof.mail.last.text }}
                            {% endif %}
                        </span>
                    </a>
            {% endfor %}
        {% endif %}
        {% if listWoofSend is not empty %}
            <h1>Woof envoyés :</h1>
            {% for woofSend in listWoofSend %}
                    <a class="col s3" href="{{ path('user_find', {'id': woofSend.currentUser.id}) }}"> {{ woofSend.currentUser.username }} </a>
                    <a href="{{ path('app_write_mail', {'id': woofSend.id}) }}">
                        <span class="col s9 card-panel">
                            {% if woofSend.mail is not empty %}
                                 {{ woofSend.mail.last.text }}
                            {% endif %}
                        </span>
                    </a>
            {% endfor %}
        {% endif %}
        {% if listAcceptedWoof is empty and listWoofSend is empty %}
            <h1> Pas encore de woof :( </h1>
        {% endif %}
    </div>

{% endblock %}