{% extends "UserBundle::layout.html.twig" %}

{% trans_default_domain 'UserBundle' %}

{% block body %}

{% if user.awaitingWoof is defined %}
On s'intéresse à votre profil :
<ul class="collection">
{% for sender in user.awaitingWoof %}
	<li class="collection-item avatar" style="color: black;">
		<a href="{{ path('user_find', {'id':sender.id}) }}" style="color: black;">
			<img src={{ asset("uploads/"~user.pictureName) }} alt={{ user.username}} class="circle">
			<span class="title"><b>{{ user.firstname|capitalize }} </b>de {{ user.city }} voudrait discuter avec vous.</span>
			<p>
				Accompagné par <b> {{ user.animal.name|upper }} </b>({{ user.animal.kind|trans }})
				{{ user.animal.age|number_format }}ans
			</p>
		</a>
		<a href="{{ path('app_answer_woof', {'id':sender.id, 'answer':'yes'}) }}" class="btn waves-effect blue ">Accepter sa demande</a>
		<a href="{{ path('app_answer_woof', {'id':sender.id, 'answer':'no'}) }}" class="btn waves-effect ">Refuser sa demande</a>
	</li>
{% endfor %}
</ul>
{% endif %}

<div class="fos_user_user_show">
	{% if user.pictureName is defined %}
	<img src={{ asset("uploads/"~user.pictureName) }} alt={{ user.username}}>
	{% endif %}
	<p>{{ 'profile.show.user.username'|trans }}: {{ user.username }}</p>
	<p>{{ 'profile.show.user.email'|trans }}: {{ user.email }}</p>
	<p>{{ 'profile.show.user.firstname'|trans }}: {{ user.firstname }}</p>
	<p>{{ 'profile.show.user.lastname'|trans }}: {{ user.lastname }}</p>
	<p>{{ 'profile.show.user.birthday'|trans }}: {{ user.birthday|localizeddate('medium', 'none', locale) }}</p>
	<p>{{ 'profile.show.user.gender'|trans }}: {{ user.gender|trans }}</p>
	<p>{{ 'profile.show.user.city'|trans }}: {{ user.city }}</p>
	<p>{{ 'profile.show.user.size'|trans }}: {{ user.size }}</p>
	<p>{{ 'profile.show.user.weight'|trans }}: {{ user.weight }}</p>
	<p>{{ 'profile.show.user.biography'|trans }}: {{ user.biography }}</p>
	<p>{{ 'profile.show.user.orientation'|trans }}: {{ user.orientation|trans }}</p>
	<p>{{ 'profile.show.user.meetingtype'|trans }}: {{ user.meetingtype|trans }}</p>
	<p>{{ 'profile.show.user.startsub'|trans }}: {{ user.startsub|localizeddate('medium', 'none', locale) }}</p>
</div>
<div class="fos_user_animal_show">
	<p>{{ 'profile.show.animal.name'|trans }}: {{ user.animal.name }}</p>
	<p>{{ 'profile.show.animal.age'|trans }}: {{ user.animal.age }}</p>
	<p>{{ 'profile.show.animal.gender'|trans }}: {{ user.animal.gender|trans }}</p>
	<p>{{ 'profile.show.animal.kind'|trans }}: {{ user.animal.kind|trans }}</p>
	<p>{{ 'profile.show.animal.race'|trans }}: {{ user.animal.race }}</p>
</div>

{% if user.status == "premium" %}
<a href="{{ path('app_unsubscribe_premium') }}" class="waves-effect waves-light btn pink lighten-1">
	<span class="fa fa-star-o"></span>
	Désactivez votre abonnement Premium
</a>
{% endif %}

{% endblock %}
